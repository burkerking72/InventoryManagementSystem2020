<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/customborder"
        android:onClick="onCardClick">


        <TextView
            android:id="@+id/listAllName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Name:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/listAllName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/listAllName1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/listAllName1"
            android:text=""
            android:textSize="24sp" />

        <TextView
            android:id="@+id/listAllID1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listAllName2"
            android:layout_marginLeft="10dp"
            android:text="ID:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/listAllID2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/listAllID1"
            android:layout_alignLeft="@id/listAllName2"
            android:text=""
            android:textSize="24sp" />

        <TextView
            android:id="@+id/listAllPrice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listAllID2"
            android:layout_marginLeft="10dp"
            android:text="Price:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/listAllPrice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/listAllPrice1"
            android:layout_alignLeft="@id/listAllName2"
            android:layout_toRightOf="@id/listAllPrice1"
            android:text=""
            android:textSize="24sp" />

        <TextView
            android:id="@+id/listAllQuantity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listAllID1"
            android:layout_marginLeft="175dp"
            android:text="Quantity:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/listAllQuantity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/listAllQuantity1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/listAllQuantity1"
            android:text=""
            android:textSize="24sp" />
    </RelativeLayout>

</LinearLayout>