<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/layout_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/addItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Add Item"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/listAllID1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addItem"
        android:layout_marginTop="25dp"
        android:text="ID:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listAllID1"
        android:layout_marginTop="25dp"
        android:text="Name:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textName"
        android:layout_marginTop="25dp"
        android:text="Quantity:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textQuantity"
        android:layout_marginTop="25dp"
        android:text="Price:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/listAllID1"
        android:layout_alignLeft="@id/editQuantity"
        android:layout_toRightOf="@id/imageButton2"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textName"
        android:layout_alignLeft="@id/editQuantity"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textQuantity"
        android:layout_toRightOf="@id/textQuantity"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textPrice"
        android:layout_alignLeft="@id/editQuantity"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonAddItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editPrice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:onClick="addItem"
        android:text="Add Item"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textPostButtonPress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonAddItem"
        android:layout_marginTop="25dp"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/listAllID1"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="-7dp"
        android:layout_toRightOf="@id/listAllID1"
        android:onClick="barcodeScanButtonAddItem"
        app:srcCompat="@android:drawable/ic_menu_camera" />
</RelativeLayout>
